{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: cl.exe build active file",
            "command": "cl.exe",
            "args": [
                "/Zi",
                "/EHsc",
                "/nologo",
                "/Fe${fileDirname}\\${fileBasenameNoExtension}.exe",
                "${file}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$msCompile"
            ],
            "group": {
                "kind": "build",
                // "isDefault": true
            },
            "detail": "Task generated by Debugger."
        },
        {
            "type": "cppbuild",
            "label": "C/C++: cl.exe build all files include cpplab3",
            "command": "cl.exe",
            "args": [
                "/Zi",
                "/MDd",
                "/EHsc",
                "/showIncludes",
                "/I${workspaceFolder}\\cpplab3\\", // wish I could make this dynamic without needing to specify
                "/nologo",
                "/Fe${fileDirname}\\${fileBasenameNoExtension}.exe",
                "${fileDirname}\\*.cpp",
                "${fileDirname}\\cpplab3\\*.cpp" // wish I could make this dynamic without needing to specify
            ],
            "problemMatcher": [
                "$msCompile"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task found on StackOverflow."
        }
    ],
    "version": "2.0.0"
}